<h3>Add Tags to <%= @entry.title %></h3>


<%= form_for @entry, url: settings_entry_path(@entry) do |f| %>
  <%= f.hidden_field :id %>

  <%= f.label :tags, "Tags" %><br>
  <%= f.collection_check_boxes :tag_ids, @current_user.tags, :id, :name%><br>

  <%= f.fields_for :tags, @current_user.tags.build do |cat| %>
    <%= cat.label :name, 'New Tag' %><br>
    <%= cat.text_field :name %>
  <% end %><br>

  <%= f.submit value: 'Save' %>
<% end %>
