<div class="header">
  <%= button_to "Home", root_path, :method => "get" %>
  <h1><%= @feed.title %></h1>
</div>

<div class="sub_header">
  <%= link_to "Refresh Feed", refresh_feed_path(@feed) %> // <%= link_to "Feed Settings", settings_feed_path(@feed) %>

  <br><% @feed.feed_categories.each do |cat| %>
  / <%= link_to cat.title, feed_category_path(cat) %> /
  <% end %>
</div>


<ul>
  <% @feed.entries.each do |entry| %>
    <li>
      <%= link_to entry.title, feed_entry_path(entry.feed, entry) %><br>
      <%= "#{entry.author} - #{entry.published_datetime.strftime("%-d %b %Y")}" %>
    </li>
  <% end %>
</ul>

