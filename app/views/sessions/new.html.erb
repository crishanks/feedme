<div class="header">
  <h1>Login</h1>
</div>

<% if flash[:notice]%>
    <%= flash[:notice] %>
<% end %>

<ul>
<%= form_tag login_path do %>
    <li><%= label_tag :username %></li>
    <li><%= text_field_tag :username %></li>

    <li><%= label_tag :password %></li>
    <li><%= password_field_tag :password %></li>

    <li><%= submit_tag 'login' %>
<% end %>
</ul>

<div class="sub_header">
  <h2>Don't Have an Account Yet?</h2>
  <%= button_to "Sign Up", new_user_path, :method => "get" %>
</div>